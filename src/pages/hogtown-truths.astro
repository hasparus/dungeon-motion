---
import { WorldTruthsForm } from '../hogtown-truths-form';
import { CheckboxStorage } from '../checkbox-storage';
import '../index.css';
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="theme-color" content="#EFF4F2" />
    <title>World Truths: Saviors of Hogtown</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preload" href="/fonts/Avara-Black.woff2" as="font" type="font/woff2" crossorigin />
    <link rel="preload" href="/fonts/Avara-Bold.woff2" as="font" type="font/woff2" crossorigin />
    <link rel="preload" href="/fonts/Avara-BoldItalic.woff2" as="font" type="font/woff2" crossorigin />
    <link href="/fonts.css" rel="stylesheet">
  </head>
  <body class="py-12 print:py-0">
    <header class="max-w-4xl mx-auto px-6 pt-4 pb-8 print:max-w-none print:mx-0 print:px-0 print:pt-0 print:pb-4">
      <h1 class="text-2xl font-bold tracking-wide text-stone-800 dark:text-stone-200 m-0 mb-2 print:text-xl">
        World Truths
      </h1>
      <p class="text-lg text-stone-600 dark:text-stone-400 m-0 print:text-base">
        Saviors of Hogtown
      </p>
    </header>
    <WorldTruthsForm />
    <CheckboxStorage client:load />
  </body>
</html>

<style>
  @media print {
    @page {
      size: A4 portrait;
      margin: 12mm;
    }
  }
</style>
