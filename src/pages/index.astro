---
import { Moves } from '../Moves';
import { CheckboxStorage } from '../CheckboxStorage';
import { DescribbedByAsLabel } from '../DescribbedByAsLabel';
import { SectionDivider } from '../SectionDivider';
import '../index.css';
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="theme-color" content="#EFF4F2" />
    <title>dungeon motion</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link href="/fonts.css" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Caveat:wght@400..700&display=block" rel="stylesheet">
  </head>
  <body class="py-24">
    <header class="max-w-4xl mx-auto px-6 pt-8 pb-4">
      <div class="flex flex-wrap gap-2 items-center">
        <h1 class="text-xl font-bold tracking-wide text-stone-800 dark:text-stone-200 m-0 mb-1">dungeon motion</h1>
        <p class="font-hand text-xl text-stone-600 dark:text-stone-400 m-0 mb-1.5">you've got the moves</p>
      </div>
      <p class="text-sm text-stone-600 dark:text-stone-400 m-0">a compendium of PbTA moves for classless games</p>
      <SectionDivider />
    </header>
    <Moves />
    <CheckboxStorage client:load />
    <DescribbedByAsLabel client:load />
  </body>
</html>
